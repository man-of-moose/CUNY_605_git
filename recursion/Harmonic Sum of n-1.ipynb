   "source": [
    "Harmonic Sum of n-1\n",
    "\n",
    "1 + 1/2 + 1/3 + 1+/4 + 1/5 + 1/6 + ...\n",
    "\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "metadata": {},
   "outputs": [],
   "source": [
    "def solve_harmonic(denominator):\n",
    "    if denominator == 1:\n",
    "        return 1\n",
    "    else:\n",
    "        return 1/denominator + solve_harmonic(denominator-1)\n",
    "        "
   ]
  },
  {
   "cell_type": "code",
